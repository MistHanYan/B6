.show{
  width: 600rpx;
  height: 150rpx;
  padding: 20rpx 20rpx;
  margin: 10rpx 0rpx;
  background-color: rosybrown;
  border-radius: 9px;
  display: flex;
}

.img{
  width: 150rpx;
  height: 100%;
  background-color:snow;
}

.name-and-time{
  display: flex;
  flex-direction:column;
}

.name{
  width: auto;
  height: 50%;
  min-width: 200rpx;
  background-color: salmon;
}

.time{
  width: auto;
  height: 50%;
  min-width: 200rpx;
  background-color:seagreen;
}

.search{
  width: 600rpx;
  height: auto;
  padding: 20rpx 20rpx;
  margin: 10rpx 0rpx;
  border-radius: 9px;
  background-color: thistle;
  display: flex;
}
