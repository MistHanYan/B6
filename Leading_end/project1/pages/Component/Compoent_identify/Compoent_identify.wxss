/* pages/Component/Compoent_identify/Compoent_identify.wxss */
.top{
  width: 100%;
  height: auto;
}
.top-user{
  width: 100%;
  height:20vh;
  background-color: #45BB00;
  padding: 0 50rpx;
  box-sizing: border-box;
  display: flex;
  align-items:center
}

.top-user-image{
  width: auto;
  height: 150rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.right-username{
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
}

.userNickName{
  width: auto;
  height: 75rpx;
}

.id{
  width: auto;
  height: 75rpx;
}

.image{
  width: 100%;
  height: 100%;
}

/* pages/collect/collect.wxss */
.history{
  height: 65vh;
  display: flex;
  /* justify-content :center; */
  align-items:center;
  flex-direction:column;
  background-color: rgb(239, 239, 239);
  overflow: auto;
}
/* pages/Component/Component_collect/Component_collect.wxss */
.show{
  width: 600rpx;
  height: 150rpx;
  padding: 20rpx 20rpx;
  margin: 10rpx 0rpx;
  background-color: rosybrown;
  border-radius: 9px;
  display: flex;
}

.img{
  width: 150rpx;
  height: 100%;
  background-color:snow;
}

.name-and-time{
  display: flex;
  flex-direction:column;
}

.name{
  width: auto;
  height: 50%;
  padding: 0 20rpx;
  min-width: 200rpx;
  background-color: salmon;
}

.time{
  width: auto;
  height: 50%;
  padding: 0 20rpx;
  min-width: 200rpx;
  background-color:seagreen;
}

.search{
  width: 600rpx;
  height: 60rpx;
  padding: 20rpx 20rpx;
  margin: 10rpx 0rpx;
  border-radius: 9px;
  background-color: thistle;
  display: flex;
}
