<!--pages/collect/collect.wxml-->
<!-- 收藏窗口 -->
<Component-user></Component-user>
<view class="shouChang">
  <view class="search">
    <input type="text" maxlength="20" focus="true" bindinput="bindKeyInput" placeholder="搜索框" style="width: 500rpx;" />
    <view bindtap="search">
      <text>搜索</text>
    </view>
  </view>
  <!-- 实时输入 -->
  <text>{{inputValue}}</text>
  <!-- 结果呈现 -->
  <view wx:if="{{show}}">
    <view class="show" wx:for="{{img_name_time}}" wx:key="index" data-index="{{index}}" bindtap="collect_outcome">
      <!-- 图片显示 -->
      <!-- <view class="img"> -->
      <!-- </view> -->
      <!-- 显示收藏的病历名和时间 -->
      <view class="name-and-time">
        <!-- 显示名称 -->
        <view class="name">
          <text>{{index}}{{item.name}}</text>
        </view>
        <!-- 显示时间 -->
        <view class="time">
          <text>{{item.time}}</text>
        </view>
      </view>
    </view>
  </view>
  <!-- 搜索结果 -->
  <view wx:if="{{showTrue}}">
    <view class="show" wx:for="{{search_img_name_time}}">
      <!-- 图片显示 -->
      <!-- <view class="img"> -->
      <!-- </view> -->
      <!-- 显示收藏的病历名和时间 -->
      <view class="name-and-time">
        <!-- 显示名称 -->
        <view class="name">
          <text>{{index}}{{item.name}}</text>
        </view>
        <!-- 显示时间 -->
        <view class="time">
          <text>{{item.time}}</text>
        </view>
      </view>
    </view>
  </view>
</view>
<Component-bootom-name></Component-bootom-name>